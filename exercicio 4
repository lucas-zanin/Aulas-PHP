            <?php
                if(isset($_POST['valor1'])){
                    $valor1 = $_POST['valor1'];
                    $valor2 = $_POST['valor2'];
                    $desconto1=(8/100)*$valor1;
                    $desconto2=(11/100)*$valor2;
                    $valortotal=($valor1-$desconto1)+($valor2-$desconto2);
                    echo"valor total a ser pago: $valortotal";
